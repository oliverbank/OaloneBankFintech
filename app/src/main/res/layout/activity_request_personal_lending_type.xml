<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootLayout"
    android:background="@drawable/gradient_animation"
    tools:context=".PersonalLendings.RequestPersonalLendingTypeActivity">

    <TextView
        android:id="@+id/txtTittle"
        android:background="@drawable/gradient_animation"
        android:padding="12dp"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:gravity="center_vertical"
        android:text="Mis Préstamos"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:singleLine="true"
        android:scrollHorizontally="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_below="@+id/txtTittle"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                app:cardCornerRadius="8dp"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:padding="8dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:src="@drawable/personal_loans"
                            android:layout_margin="8dp"
                            android:layout_width="80dp"
                            android:layout_height="80dp"/>

                        <LinearLayout
                            android:layout_margin="8dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_margin="2dp"
                                android:textSize="14sp"
                                android:textColor="@android:color/black"
                                android:text="PRÉSTAMO PERSONAL DIGITAL"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                            <View
                                android:layout_margin="2dp"
                                android:background="@android:color/black"
                                android:layout_width="match_parent"
                                android:layout_height="0.3dp"/>

                            <TextView
                                android:layout_margin="2dp"
                                android:text="Solicita tu prestamo personal digital y obtén el dinero en tu cuenta en poco tiempo."
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>


                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_margin="8dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:id="@+id/btnPersonalLendingRequest"
                            android:textColor="@android:color/white"
                            android:text="Conocer más"
                            android:background="@drawable/button3_background"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="35dp"/>

                        <Button
                            android:id="@+id/btnPersonalLoanRequest"
                            android:textColor="@android:color/white"
                            android:text="Solicitar"
                            android:background="@drawable/button1_background"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="35dp"/>

                    </LinearLayout>


                </LinearLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>

    </ScrollView>

</RelativeLayout>