<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MyLoans.ExpressLoan.ExpressLoanRequest.StudentRequest.PayStubsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewTitle"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:padding="8dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Boletas de Pago:"
                    android:textSize="18sp"
                    android:layout_margin="4dp"
                    android:textColor="@android:color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Sube uno o más archivos de las últimas boletas de pago pagadas a la institución eduticativa. Puedes cargar archivos de tipo imágen (fotos, capturas) o PDF."
                    android:layout_margin="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/btnUploadFiles"
            android:padding="18dp"
            android:text="CARGAR ARCHIVO"
            android:textColor="@android:color/white"
            android:drawableStart="@drawable/upload_vector_asset"
            android:layout_margin="12dp"
            android:layout_below="@id/cardViewTitle"
            android:background="@drawable/button1_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_above="@+id/btnContinue"
            android:layout_below="@id/btnUploadFiles"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </android.support.v7.widget.RecyclerView>

        <Button
            android:id="@+id/btnContinue"
            android:textColor="@android:color/white"
            android:text="Continuar"
            android:layout_alignParentBottom="true"
            android:layout_margin="8dp"
            android:background="@drawable/button3_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </RelativeLayout>

</FrameLayout>