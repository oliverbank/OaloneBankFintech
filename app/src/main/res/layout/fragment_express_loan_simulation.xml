<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MyLoans.ExpressLoan.ExpressLoanRequest.ExpressLoanSimulationFragment">

    <RelativeLayout
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_above="@+id/btnContinue"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    android:layout_margin="8dp"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:padding="8dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/money_hand_up_icon"
                            android:layout_margin="8dp"
                            android:layout_width="60dp"
                            android:layout_height="60dp"/>

                        <TextView
                            android:layout_margin="12dp"
                            android:textSize="16sp"
                            android:textColor="@android:color/black"
                            android:text="¿Cuanto dinero necesitas?"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <EditText
                            android:id="@+id/edtAmount"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:inputType="numberDecimal|number"
                            android:padding="4dp"
                            android:background="@drawable/edit_text_background1"
                            android:hint="Monto..."
                            android:layout_marginStart="60dp"
                            android:layout_marginEnd="60dp"
                            android:layout_marginBottom="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <RadioGroup
                            android:padding="8dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/rdSoles"
                                android:layout_margin="8dp"
                                android:padding="8dp"
                                android:background="@drawable/edit_text_background1"
                                android:layout_weight="1"
                                android:text="S/ (Soles)"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"/>

                            <RadioButton
                                android:id="@+id/rdDollars"
                                android:layout_margin="8dp"
                                android:padding="8dp"
                                android:background="@drawable/edit_text_background1"
                                android:layout_weight="1"
                                android:text="$ (Dólares)"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"/>

                        </RadioGroup>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_margin="8dp"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:padding="8dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:padding="8dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:src="@drawable/calendar_color_icon"
                                android:layout_margin="8dp"
                                android:layout_width="60dp"
                                android:layout_height="60dp"/>

                            <TextView
                                android:layout_margin="12dp"
                                android:textSize="16sp"
                                android:textColor="@android:color/black"
                                android:text="Meses de pago"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <Button
                                android:id="@+id/btnMonths"
                                android:gravity="center"
                                android:padding="4dp"
                                android:background="@drawable/edit_text_background1"
                                android:hint="Meses..."
                                android:layout_width="match_parent"
                                android:layout_height="34dp" />



                        </LinearLayout>

                        <LinearLayout
                            android:padding="8dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:src="@drawable/calendar_color_icon"
                                android:layout_margin="8dp"
                                android:layout_width="60dp"
                                android:layout_height="60dp"/>

                            <TextView
                                android:layout_margin="12dp"
                                android:textSize="16sp"
                                android:textColor="@android:color/black"
                                android:text="Meses de gracia"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <Button
                                android:id="@+id/btnGrace"
                                android:gravity="center"
                                android:padding="4dp"
                                android:background="@drawable/edit_text_background1"
                                android:hint="Meses..."
                                android:layout_width="match_parent"
                                android:layout_height="34dp" />

                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_margin="8dp"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:padding="8dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/simulation_1"
                            android:layout_margin="8dp"
                            android:layout_width="60dp"
                            android:layout_height="60dp"/>

                        <TextView
                            android:layout_margin="8dp"
                            android:textSize="16sp"
                            android:textColor="@android:color/black"
                            android:text="SIMULACIÓN"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_margin="8dp"
                            android:textSize="16sp"
                            android:textColor="@android:color/black"
                            android:text="Cuota Mensual Estimada:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/txtQuoteAmount"
                            android:layout_margin="8dp"
                            android:textSize="28sp"
                            android:textColor="@android:color/black"
                            android:text="S/ 0.00"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>


            </LinearLayout>

        </ScrollView>

        <Button
            android:id="@+id/btnContinue"
            android:textColor="@android:color/white"
            android:text="Continuar"
            android:layout_alignParentBottom="true"
            android:layout_margin="8dp"
            android:background="@drawable/button3_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</FrameLayout>