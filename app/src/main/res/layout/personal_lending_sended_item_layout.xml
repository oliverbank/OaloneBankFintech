<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:layout_margin="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:background="@drawable/edit_text_background1"
        android:padding="4dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:gravity="center_vertical"
            android:layout_margin="4dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageUser"
                android:layout_width="70dp"
                android:layout_height="70dp" />

            <LinearLayout
                android:layout_margin="8dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/txtUsername"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:text="DNI:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txtDni"
                        android:textSize="16sp"
                        android:layout_marginStart="4dp"
                        android:textColor="@android:color/black"
                        android:text="1234567890"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:text="Verificación:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginStart="4dp"
                        android:id="@+id/txtUserVerification"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/imageUserVerification"
                        android:layout_marginStart="4dp"
                        android:src="@drawable/transaction_in_progress"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_margin="2dp"
            android:padding="4dp"
            android:background="@drawable/edit_text_background1"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtAmmount"
                android:gravity="center"
                android:layout_margin="2dp"
                android:text="Monto: 0.00"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtCurrency"
                android:gravity="center"
                android:layout_margin="2dp"
                android:text="FX"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:id="@+id/txtIssueDate"
                android:layout_margin="2dp"
                android:text="Fecha de Emisión: 00/00/00"
                android:textColor="@android:color/black"
                android:background="@drawable/edit_text_background1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="30dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_margin="2dp"
            android:padding="4dp"
            android:background="@drawable/edit_text_background1"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:layout_margin="2dp"
                android:text="Estado del préstamo: "
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtBillState"
                android:gravity="center"
                android:layout_margin="2dp"
                android:text="Pendiente de confirmación"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cancelLayout"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnCancelLending"
                android:layout_margin="4dp"
                android:text="Cancelar y Eliminar PRÉSTAMO"
                android:textColor="@android:color/white"
                android:background="@drawable/button3_background"
                android:layout_width="match_parent"
                android:layout_height="30dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/showDetailsLayout"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnShowDetails"
                android:layout_margin="4dp"
                android:text="VER DETALLES DEL PRÉSTAMO"
                android:textColor="@android:color/white"
                android:background="@drawable/button2_background"
                android:layout_width="match_parent"
                android:layout_height="30dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/showBillsLayout"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnShowBills"
                android:layout_margin="4dp"
                android:text="VER BOLETAS DE PAGO"
                android:textColor="@android:color/white"
                android:background="@drawable/button1_background"
                android:layout_width="match_parent"
                android:layout_height="30dp"/>

        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>