<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootLayout"
    tools:context=".MyLoans.ExpressLoan.ExpressLoanReady.FinishAndOutlayFragment">

    <RelativeLayout
        android:padding="12dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtMessage"
            android:layout_margin="8dp"
            android:textSize="22sp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:text="Estás a punto de obtener el préstamo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_below="@id/txtMessage"
            android:layout_centerInParent="true"
            android:id="@+id/imgLoan"
            android:layout_margin="12dp"
            android:src="@drawable/loan1_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_below="@id/imgLoan"
            android:layout_margin="12dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:padding="8dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:padding="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/contract_color_icon"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="30dp"/>

                    <TextView
                        android:layout_margin="8dp"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:text="Contrato Aceptado"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/imgContractChecked"
                        android:src="@drawable/transaction_in_progress"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="30dp"/>

                </LinearLayout>


            </LinearLayout>

        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/btnGetMoney"
            android:layout_margin="12dp"
            android:text="DESEMBOLSAR AHORA"
            android:textColor="@android:color/white"
            android:background="@drawable/button3_background"
            android:layout_below="@id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>


</RelativeLayout>