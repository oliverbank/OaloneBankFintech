<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyLoans.ExpressLoan.ExpressLoanRequest.StudentRequest.SchoolInformationFragment">

    <RelativeLayout
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_above="@+id/btnContinue"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    android:layout_margin="8dp"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:padding="8dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/school_color_icon"
                            android:layout_margin="8dp"
                            android:layout_width="60dp"
                            android:layout_height="60dp"/>

                        <TextView
                            android:layout_margin="8dp"
                            android:textSize="16sp"
                            android:textColor="@android:color/black"
                            android:text="¿En qué universidad o instituto estudias?"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <EditText
                            android:id="@+id/edtSchool"
                            android:inputType="textCapWords"
                            android:padding="8dp"
                            android:layout_margin="8dp"
                            android:background="@drawable/edit_text_background1"
                            android:hint="Universidad o instituto..."
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_margin="8dp"
                            android:textSize="16sp"
                            android:textColor="@android:color/black"
                            android:text="¿En qué ciclo estás?"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <Button
                            android:id="@+id/btnCycle"
                            android:padding="8dp"
                            android:layout_margin="8dp"
                            android:gravity="start"
                            android:background="@drawable/edit_text_background1"
                            android:hint="Ciclo..."
                            android:layout_width="match_parent"
                            android:layout_height="35dp" />

                        <TextView
                            android:layout_margin="8dp"
                            android:textSize="16sp"
                            android:textColor="@android:color/black"
                            android:text="¿Qué carrera estudias?"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <EditText
                            android:id="@+id/edtDegree"
                            android:inputType="textCapWords"
                            android:padding="8dp"
                            android:layout_margin="8dp"
                            android:background="@drawable/edit_text_background1"
                            android:hint="Carrera..."
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_margin="8dp"
                            android:textSize="16sp"
                            android:textColor="@android:color/black"
                            android:text="Ingresa tu correo institucional"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <EditText
                            android:id="@+id/edtSchoolEmail"
                            android:inputType="textEmailAddress"
                            android:padding="8dp"
                            android:layout_margin="8dp"
                            android:background="@drawable/edit_text_background1"
                            android:hint="Correo institucional..."
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>




            </LinearLayout>

        </ScrollView>

        <Button
            android:id="@+id/btnContinue"
            android:textColor="@android:color/white"
            android:text="Continuar"
            android:layout_alignParentBottom="true"
            android:layout_margin="8dp"
            android:background="@drawable/button3_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>


</FrameLayout>