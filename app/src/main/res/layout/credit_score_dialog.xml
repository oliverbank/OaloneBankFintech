<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_margin="4dp"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                android:text="CALIFICACIONES CREDITICIAS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:layout_margin="4dp"
                android:background="@drawable/gradient_animation"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:layout_margin="8dp"
                android:background="@drawable/button1_background"
                android:padding="8dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="16sp"
                    android:layout_margin="2dp"
                    android:textColor="@android:color/white"
                    android:text="Desconocido:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_margin="2dp"
                    android:background="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"/>

                <TextView
                    android:layout_margin="2dp"
                    android:textColor="@android:color/white"
                    android:text="Todavía no se pudo obtener información de tu calificación crediticia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_margin="8dp"
                android:background="@drawable/button4_background"
                android:padding="8dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="16sp"
                    android:layout_margin="2dp"
                    android:textColor="@android:color/white"
                    android:text="Normal:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_margin="2dp"
                    android:background="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"/>

                <TextView
                    android:layout_margin="2dp"
                    android:textColor="@android:color/white"
                    android:text="Sueles pagar a tiempo y tienes una buena reputación en el sistema financiero."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_margin="8dp"
                android:background="@drawable/button2_background"
                android:padding="8dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="16sp"
                    android:layout_margin="2dp"
                    android:textColor="@android:color/white"
                    android:text="Problemas Potenciales:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_margin="2dp"
                    android:background="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"/>

                <TextView
                    android:layout_margin="2dp"
                    android:textColor="@android:color/white"
                    android:text="Sueles atrasarte entre 9 a 30 días en pagar tus deudas."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_margin="8dp"
                android:background="@drawable/button2_background"
                android:padding="8dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="16sp"
                    android:layout_margin="2dp"
                    android:textColor="@android:color/white"
                    android:text="Deficiente:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_margin="2dp"
                    android:background="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"/>

                <TextView
                    android:layout_margin="2dp"
                    android:textColor="@android:color/white"
                    android:text="Podrías tener problemas para acceder a créditos o préstamos, sueles tardar entre 31 a 60 días en pagar tus deudas."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_margin="8dp"
                android:background="@drawable/button2_background"
                android:padding="8dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="16sp"
                    android:layout_margin="2dp"
                    android:textColor="@android:color/white"
                    android:text="Dudoso:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_margin="2dp"
                    android:background="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"/>

                <TextView
                    android:layout_margin="2dp"
                    android:textColor="@android:color/white"
                    android:text="A las instituciones financieras les costará confiar en ti, sueles tardar en pagar entre 61 a 120 días."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_margin="8dp"
                android:background="@drawable/button3_background"
                android:padding="8dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="16sp"
                    android:layout_margin="2dp"
                    android:textColor="@android:color/white"
                    android:text="Pérdida:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_margin="2dp"
                    android:background="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"/>

                <TextView
                    android:layout_margin="2dp"
                    android:textColor="@android:color/white"
                    android:text="Será muy dificil acceder a productos de financiamiento debido a tus incumplimientos de deuda."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>