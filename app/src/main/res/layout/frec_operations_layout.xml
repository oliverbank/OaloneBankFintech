<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:cardCornerRadius="5dp"
    app:cardElevation="10dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@drawable/edit_text_background1"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@android:color/black"
            android:gravity="center"
            android:text="OPERACIONES FRECUENTES"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:background="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_margin="10dp"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/btnDeposit"
                    android:scaleType="centerCrop"
                    android:src="@drawable/insert_coin_icon"
                    android:padding="20dp"
                    android:background="@drawable/button1_background"
                    android:layout_width="80dp"
                    android:layout_height="80dp" />

                <TextView
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"
                    android:textColor="@android:color/black"
                    android:text="DEPOSITAR"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_margin="5dp"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/btnTransfer"
                    android:padding="16dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/transfer_user_icon"
                    android:background="@drawable/button3_background"
                    android:layout_width="80dp"
                    android:layout_height="80dp" />

                <TextView
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"
                    android:textColor="@android:color/black"
                    android:text="TRANSFERIR"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:layout_margin="5dp"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/btnWithdrawal"
                    android:padding="20dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/atm_icon"
                    android:background="@drawable/button2_background"
                    android:layout_width="80dp"
                    android:layout_height="80dp" />

                <TextView
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"
                    android:textColor="@android:color/black"
                    android:text="RETIRAR"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_margin="10dp"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/btnQrPay"
                    android:scaleType="centerCrop"
                    android:src="@drawable/qr_code_payment_icon"
                    android:padding="10dp"
                    android:background="@drawable/button2_background"
                    android:layout_width="110dp"
                    android:layout_height="110dp" />

                <TextView
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"
                    android:textColor="@android:color/black"
                    android:text="PAGAR CON QR"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>