                        android:background="@color/colorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                    <TextView
                        android:id="@+id/txtCustomerSocialReason"
                        android:drawableStart="@drawable/card_person_icon"
                        android:textColor="@android:color/black"
                        android:text="Razón social del cliente: Oliver Bank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txtCustomerRuc"
                        android:drawableStart="@drawable/card_person_icon"
                        android:textColor="@android:color/black"
                        android:text="RUC del cliente: 10943764435"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txtCustomerName"
                        android:drawableStart="@drawable/card_person_icon"
                        android:textColor="@android:color/black"
                        android:text="Nombre del cliente: Oliver Paredes Fasce"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txtCustomerAddress"
                        android:drawableStart="@drawable/location_icon"
                        android:textColor="@android:color/black"
                        android:text="Ubicación del cliente: Jr libertad 123, Magdalena de Mar, Lima, Lima"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:background="@drawable/edit_text_background1"
                    android:padding="8dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textColor="@color/colorPrimary"
                        android:text="DATOS DE LA FACTURA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <View
                        android:background="@color/colorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                    <TextView
                        android:id="@+id/txtBillAmmount"
                        android:drawableStart="@drawable/money2_icon"
                        android:textColor="@android:color/black"
                        android:text="Importe de la factura: 14,353.45 PEN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txtStartBill"
                        android:drawableStart="@drawable/calendar_icon"
                        android:textColor="@android:color/black"
                        android:text="Emisión de la factura: 18-08-2019"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txtEndBill"
                        android:drawableStart="@drawable/calendar_icon"
                        android:textColor="@android:color/black"
                        android:text="Vencimiento de la factura: 18-10-2019"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:background="@drawable/edit_text_background1"
                    android:padding="8dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textColor="@color/colorPrimary"
                        android:text="RETORNO DEL INVERSOR"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <View
                        android:background="@color/colorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                    <TextView
                        android:textColor="@color/colorPrimary"
                        android:textSize="12sp"
                        android:text="*Estos datos no incluyen los costos de transacción"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txtAnualInterestRate"
                        android:layout_margin="2dp"
                        android:drawableStart="@drawable/interest_rate_icon"
                        android:textColor="@android:color/black"
                        android:text="Tasa de interés efectiva anual: 24.54%"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txtCurrentDate"
                        android:layout_margin="2dp"
                        android:drawableStart="@drawable/calendar_icon"
                        android:textColor="@android:color/black"
                        android:text="Fecha actual: 15-10-2019"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txEndBill"
                        android:layout_margin="2dp"
                        android:drawableStart="@drawable/calendar_icon"
                        android:textColor="@android:color/black"
                        android:text="Vencimiento de la factura: 15-12-2019"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txtPeriodicalDays"
                        android:layout_margin="2dp"
                        android:drawableStart="@drawable/calendar_icon"
                        android:textColor="@android:color/black"
                        android:text="Periodo a financiar: 45 días"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txtDailyInterestRate"
                        android:layout_margin="2dp"
                        android:drawableStart="@drawable/interest_rate_icon"
                        android:textColor="@android:color/black"
                        android:text="Tasa de interés efectiva diaria: 4.54%"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txtPeriodicalRate"
                        android:layout_margin="2dp"
                        android:drawableStart="@drawable/interest_rate_icon"
                        android:textColor="@android:color/black"
                        android:text="Tasa aplicada para el período: 4.54%"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txtDiscountAmmount"
                        android:layout_margin="2dp"
                        android:drawableStart="@drawable/money2_icon"
                        android:textColor="@android:color/black"
                        android:text="Monto de descuento: 1312.34 PEN"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txtResguardRate"
                        android:layout_margin="2dp"
                        android:drawableStart="@drawable/interest_rate_icon"
                        android:textColor="@android:color/black"
                        android:text="Resguardo: 4.5%"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />

                    <TextView
                        android:id="@+id/txtResguardAmmount"
                        android:layout_margin="2dp"
                        android:drawableStart="@drawable/money2_icon"
                        android:textColor="@android:color/black"
                        android:text="Monto a recibir al vencimiento: 15.43 PEN"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />

                    <TextView
                        android:id="@+id/txtFactoringAmmount"
                        android:padding="4dp"
                        android:layout_margin="2dp"
                        android:drawableStart="@drawable/money2_icon"
                        android:textColor="@android:color/black"
                        android:text="Monto a recibir hoy: 12315.43 PEN"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txtFactoringRequestEnds"
                        android:layout_margin="2dp"
                        android:drawableStart="@drawable/calendar_icon"
                        android:textColor="@android:color/black"
                        android:text="Fin de la subasta: "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </android.support.v7.widget.CardView>



