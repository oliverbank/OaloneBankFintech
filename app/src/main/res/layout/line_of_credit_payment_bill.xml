<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/mainLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        app:cardElevation="10dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@drawable/edit_text_background1"
            android:layout_margin="0dp"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtMotnhYear"
                android:textSize="16sp"
                android:gravity="center"
                android:text=""
                android:textColor="@android:color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:layout_margin="4dp"
                android:background="@android:color/darker_gray"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:background="@drawable/edit_text_background1"
                android:padding="8dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/stateImage"
                    android:src="@drawable/transaction_in_progress"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

                <TextView
                    android:id="@+id/txtQuoteAmount"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:text="PAGO DEL MES: S/0.00"
                    android:textColor="@android:color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/daysLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_marginTop="8dp"
                    android:background="@android:color/darker_gray"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <TextView
                    android:id="@+id/txtDaysToExpire"
                    android:gravity="center"
                    android:text="Vence en: 000 dÃ­as"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_marginTop="2dp"
                    android:background="@android:color/darker_gray"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/buttonsLayout"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnPayComplete"
                    android:layout_margin="2dp"
                    android:text="PAGAR EL MES"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button1_background"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="30dp"/>

                <Button
                    android:id="@+id/btnPayParcial"
                    android:layout_margin="2dp"
                    android:text="PAGO PARCIAL"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button3_background"
                    android:layout_weight="0"
                    android:layout_width="0dp"
                    android:layout_height="30dp"/>

            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>