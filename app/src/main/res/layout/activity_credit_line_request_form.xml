                            android:background="@drawable/edit_text_background1"
                            android:src="@drawable/camera_icon"
                            android:padding="1dp"
                            android:scaleType="centerCrop"
                            android:layout_margin="10dp"
                            android:layout_width="100dp"
                            android:layout_height="100dp"/>

