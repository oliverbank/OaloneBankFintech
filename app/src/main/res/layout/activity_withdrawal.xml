<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_animation"
    tools:context=".WithdrawalActivity">

    <TextView
        android:id="@+id/txtTittle"
        android:background="@drawable/gradient_animation"
        android:padding="12dp"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:gravity="center_vertical"
        android:text="Retiro de mi cuenta"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:singleLine="true"
        android:scrollHorizontally="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_margin="8dp"
        android:layout_below="@id/txtTittle"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_margin="5dp"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:text="Selecciona una cuenta bancaria para el retiro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_margin="0dp"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:text="o"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnAddBankAccount"
            android:drawableStart="@drawable/add_icon"
            android:padding="8dp"
            android:layout_margin="4dp"
            android:background="@drawable/button1_background"
            android:textColor="@android:color/white"
            android:text="Agregar cuenta bancaria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_below="@id/linearLayout"
        android:layout_above="@id/btnWithdrawalWithoutCard"
        android:layout_margin="8dp"
        android:layout_marginBottom="0dp"
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

    </android.support.v7.widget.RecyclerView>

    <Button
        android:layout_alignParentBottom="true"
        android:id="@+id/btnWithdrawalWithoutCard"
        android:drawableStart="@drawable/add_icon"
        android:padding="8dp"
        android:background="@drawable/button1_background_rectangle"
        android:textColor="@android:color/white"
        android:text="Retiros sin tarjetas o cuentas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>