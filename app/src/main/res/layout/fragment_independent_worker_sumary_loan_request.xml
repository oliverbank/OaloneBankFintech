<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MyLoans.ExpressLoan.ExpressLoanRequest.IndependentWorker.IndependentWorkerSumaryLoanRequestFragment">

    <RelativeLayout
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_above="@id/btnSenRequest"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:padding="8dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    android:id="@+id/cardViewTitle"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp"
                    android:layout_margin="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:padding="8dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Resumen de Solicitud:"
                            android:textSize="18sp"
                            android:layout_margin="4dp"
                            android:textColor="@android:color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:text="El presente resumen presenta tus requerimientos del préstamo y detalles de los documentos adjuntados. Si no deseas hacer alguna modificación adicional puedes enviar la solicitud."
                            android:layout_margin="4dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_margin="8dp"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:padding="8dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_margin="8dp"
                            android:textSize="16sp"
                            android:textColor="@android:color/black"
                            android:text="Monto Solicitado:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/txtLoanAmount"
                            android:layout_margin="8dp"
                            android:textSize="28sp"
                            android:textColor="@android:color/black"
                            android:text="S/ 0.00"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_margin="8dp"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:padding="8dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:padding="8dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:src="@drawable/calendar_color_icon"
                                android:layout_width="30dp"
                                android:layout_height="30dp"/>

                            <TextView
                                android:id="@+id/txtMonths"
                                android:layout_margin="8dp"
                                android:textSize="16sp"
                                android:textColor="@android:color/black"
                                android:text="Cuotas: 48 Cuotas Mensuales"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>


                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_margin="8dp"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:padding="8dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:padding="8dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:src="@drawable/calendar_color_icon"
                                android:layout_width="30dp"
                                android:layout_height="30dp"/>

                            <TextView
                                android:id="@+id/txtGracePeriod"
                                android:layout_margin="8dp"
                                android:textSize="16sp"
                                android:textColor="@android:color/black"
                                android:text="Período de gracia: 2 Meses"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>


                    </LinearLayout>

                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_margin="8dp"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:padding="8dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:padding="8dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:src="@drawable/upload_file1"
                                android:layout_weight="0.5"
                                android:layout_width="0dp"
                                android:layout_height="30dp"/>

                            <TextView
                                android:layout_margin="8dp"
                                android:textSize="16sp"
                                android:textColor="@android:color/black"
                                android:text="Recibo de agua o luz"
                                android:layout_weight="2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content" />

                            <ImageView
                                android:id="@+id/imgLightAndWasterReceiptChecked"
                                android:src="@drawable/transaction_in_progress"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="30dp"/>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/txtLightAndWaterFilesCount"
                            android:layout_marginStart="20dp"
                            android:textSize="14sp"
                            android:text="0 Archivos cargados"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_margin="8dp"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:padding="8dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:padding="8dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:src="@drawable/upload_file1"
                                android:layout_weight="0.5"
                                android:layout_width="0dp"
                                android:layout_height="30dp"/>

                            <TextView
                                android:layout_margin="8dp"
                                android:textSize="16sp"
                                android:textColor="@android:color/black"
                                android:text="Recibos por Honorarios"
                                android:layout_weight="2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content" />

                            <ImageView
                                android:id="@+id/imgProofOfRegistration"
                                android:src="@drawable/transaction_in_progress"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="30dp"/>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/txtProofOfRegistrationFiles"
                            android:layout_marginStart="20dp"
                            android:textSize="14sp"
                            android:text="0 Archivos cargados"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_margin="8dp"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:padding="8dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:padding="8dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:src="@drawable/upload_file1"
                                android:layout_weight="0.5"
                                android:layout_width="0dp"
                                android:layout_height="30dp"/>

                            <TextView
                                android:layout_margin="8dp"
                                android:textSize="16sp"
                                android:textColor="@android:color/black"
                                android:text="Declaración Anual de Impuesto a la Renta"
                                android:layout_weight="2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content" />

                            <ImageView
                                android:id="@+id/imgPayStubs"
                                android:src="@drawable/transaction_in_progress"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="30dp"/>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/txtPayStubsFiles"
                            android:layout_marginStart="20dp"
                            android:textSize="14sp"
                            android:text="0 Archivos cargados"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </ScrollView>


        <Button
            android:id="@+id/btnSenRequest"
            android:textColor="@android:color/white"
            android:text="Enviar Solicitud"
            android:layout_alignParentBottom="true"
            android:layout_margin="8dp"
            android:background="@drawable/button1_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </RelativeLayout>


</FrameLayout>