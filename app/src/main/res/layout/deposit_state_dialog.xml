<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:textSize="18sp"
                android:layout_margin="4dp"
                android:textColor="@color/colorPrimary"
                android:text="ESTADO DEL DEPÓSITO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:background="@drawable/gradient_animation"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>

            <LinearLayout
                android:layout_marginTop="8dp"
                android:id="@+id/layoutState1"
                android:gravity="center"
                android:padding="0dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="0dp"
                    android:layout_margin="0dp"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <View
                        android:background="@drawable/gradient_animation"
                        android:layout_width="2dp"
                        android:layout_height="30dp"/>

                    <ImageView
                        android:id="@+id/imageState1"
                        android:layout_margin="4dp"
                        android:src="@drawable/transaction_in_progress"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>

                    <View
                        android:background="@drawable/gradient_animation"
                        android:layout_width="2dp"
                        android:layout_height="30dp"/>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutStateText1"
                    android:background="@drawable/edit_text_background1"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:layout_margin="8dp"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/text1State1"
                        android:layout_margin="2dp"
                        android:text="Cargar Comprabante:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/text2State1"
                        android:layout_margin="2dp"
                        android:text="Debes subir una foto o captura del comprobante de depósito o transferencia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutState2"
                android:gravity="center"
                android:padding="0dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="0dp"
                    android:layout_margin="0dp"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <View
                        android:background="@drawable/gradient_animation"
                        android:layout_width="2dp"
                        android:layout_height="30dp"/>

                    <ImageView
                        android:id="@+id/imageState2"
                        android:layout_margin="4dp"
                        android:src="@drawable/transaction_in_progress"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>

                    <View
                        android:background="@drawable/gradient_animation"
                        android:layout_width="2dp"
                        android:layout_height="20dp"/>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutStateText2"
                    android:background="@drawable/edit_text_background1"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:layout_margin="8dp"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/text1State2"
                        android:layout_margin="2dp"
                        android:text="Tu comprobante está siendo verificado:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/text2State2"
                        android:layout_margin="2dp"
                        android:text="Estamos revisando tu comprobante de depósito o transferencia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutState3"
                android:gravity="center"
                android:padding="0dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="0dp"
                    android:layout_margin="0dp"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <View
                        android:background="@drawable/gradient_animation"
                        android:layout_width="2dp"
                        android:layout_height="30dp"/>

                    <ImageView
                        android:id="@+id/imageState3"
                        android:layout_margin="4dp"
                        android:src="@drawable/transaction_in_progress"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>

                    <View
                        android:background="@drawable/gradient_animation"
                        android:layout_width="0dp"
                        android:layout_height="30dp"/>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutStateText3"
                    android:background="@drawable/edit_text_background1"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:layout_margin="8dp"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/text1State3"
                        android:layout_margin="2dp"
                        android:text="Depósito exitoso:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/text2State3"
                        android:layout_margin="2dp"
                        android:text="Tu dinero ya se encuentra en tu cuenta de Oliver Bank"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutState4"
                android:gravity="center"
                android:padding="0dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="0dp"
                    android:layout_margin="0dp"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <View
                        android:background="@drawable/gradient_animation"
                        android:layout_width="2dp"
                        android:layout_height="30dp"/>

                    <ImageView
                        android:id="@+id/imageState4"
                        android:layout_margin="4dp"
                        android:src="@drawable/transaction_in_progress"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>

                    <View
                        android:background="@drawable/gradient_animation"
                        android:layout_width="0dp"
                        android:layout_height="30dp"/>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutStateText4"
                    android:background="@drawable/edit_text_background1"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:layout_margin="8dp"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/text1State4"
                        android:layout_margin="2dp"
                        android:text="Depósito exitoso con variación en monto:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/text2State4"
                        android:layout_margin="2dp"
                        android:text="Tu dinero ya se encuentra en tu cuenta de Oliver Bank pero hay una variación del monto real depositado y lo declarado."
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutState5"
                android:gravity="center"
                android:padding="0dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="0dp"
                    android:layout_margin="0dp"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <View
                        android:background="@drawable/gradient_animation"
                        android:layout_width="2dp"
                        android:layout_height="30dp"/>

                    <ImageView
                        android:id="@+id/imageState5"
                        android:layout_margin="4dp"
                        android:src="@drawable/transaction_in_progress"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>

                    <View
                        android:background="@drawable/gradient_animation"
                        android:layout_width="0dp"
                        android:layout_height="30dp"/>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutStateText5"
                    android:background="@drawable/edit_text_background1"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:layout_margin="8dp"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/text1State5"
                        android:layout_margin="2dp"
                        android:text="Comprobante inválido"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/text2State5"
                        android:layout_margin="2dp"
                        android:text="Tu comprobante no demuestra que hayas realizado la operación"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>