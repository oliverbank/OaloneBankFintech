<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MyLoans.ExpressLoan.ExpressLoanReady.LoanReadyIntroductionFragment">

    <ScrollView
        android:layout_above="@id/btnContinue"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:padding="12dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <pl.droidsonroids.gif.GifImageView
                android:src="@drawable/check_mark"
                android:layout_width="180dp"
                android:layout_height="180dp"/>

            <TextView
                android:id="@+id/txtMessage"
                android:layout_margin="8dp"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:text=" "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_margin="8dp"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:text=" Para desembolsar tu préstamo deberás realizar lo siguiente:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    android:layout_margin="8dp"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:gravity="center"
                            android:layout_margin="4dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_margin="8dp"
                                android:src="@drawable/checklist_icon"
                                android:layout_width="30dp"
                                android:layout_height="30dp"/>

                            <TextView
                                android:layout_margin="8dp"
                                android:textSize="14sp"
                                android:textColor="@android:color/black"
                                android:text="Verifica las condiciones del préstamo (Monto, Plazos, Interéses, Cuota, etc)"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                        <LinearLayout
                            android:gravity="center"
                            android:layout_margin="4dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_margin="8dp"
                                android:src="@drawable/contract_color_icon"
                                android:layout_width="30dp"
                                android:layout_height="30dp"/>

                            <TextView
                                android:layout_margin="8dp"
                                android:textSize="14sp"
                                android:textColor="@android:color/black"
                                android:text="Lee y Acepta el contrato"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                        <LinearLayout
                            android:gravity="center"
                            android:layout_margin="4dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_margin="8dp"
                                android:src="@drawable/money_hand_up_icon"
                                android:layout_width="30dp"
                                android:layout_height="30dp"/>

                            <TextView
                                android:layout_margin="8dp"
                                android:textSize="14sp"
                                android:textColor="@android:color/black"
                                android:text="Confirma el desembolso"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>


                    </LinearLayout>


                </android.support.v7.widget.CardView>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btnContinue"
        android:layout_alignParentBottom="true"
        android:textColor="@android:color/white"
        android:text="Continuar"
        android:background="@drawable/button1_background"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>